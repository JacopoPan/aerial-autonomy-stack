<% drone_type = ENV.fetch('DRONE_TYPE', 'quad') %>
<% autopilot = ENV.fetch('AUTOPILOT', 'px4') %>
<% num_drones = ENV.fetch('NUM_DRONES', 1).to_i %>

name: simulation_tmuxinator

windows:

  <% if autopilot == 'px4' %>
  - px4_gz_sim:
      layout: even-horizontal
      panes:
        - >
          GZ_SIM_RESOURCE_PATH=$GZ_SIM_RESOURCE_PATH:/git/resources/aircraft_models:/git/resources/simulation_worlds
          gz sim -v4 -r default.sdf
  <% num_drones.times do |i| %>
  - px4_sitl_<%= i + 1 %>:
      layout: even-horizontal
      panes:
        - >
          sleep <%= (i + 1) * 3 %> &&
          PX4_GZ_MODEL_POSE="<%= i * 2 %>,<%= i * 2 %>,0,0,0,0"
          PX4_SYS_AUTOSTART=<%= drone_type == 'quad' ? '4001' : '4004' %>
          ROS_DOMAIN_ID=<%= i + 1 %>
          PX4_UXRCE_DDS_NS="Drone<%= i + 1 %>"
          PX4_UXRCE_DDS_AG_IP="42.42.1.<%= i + 1 %>"
          PX4_UXRCE_DDS_PORT=8888
          /git/PX4-Autopilot/build/px4_sitl_default/bin/px4 -i <%= i %>
        - "ROS_DOMAIN_ID=<%= i + 1 %> ros2 run ros_gz_bridge parameter_bridge /clock@rosgraph_msgs/msg/Clock[gz.msgs.Clock"
  <% end %>

  <% elsif autopilot == 'ardupilot' %>
  - ardupilot_gz_sim:
      layout: even-horizontal
      panes:
        - > 
          GZ_SIM_SYSTEM_PLUGIN_PATH=/git/ardupilot_gazebo/build:$GZ_SIM_SYSTEM_PLUGIN_PATH 
          GZ_SIM_RESOURCE_PATH=/git/resources/aircraft_models:/git/resources/simulation_worlds:$GZ_SIM_RESOURCE_PATH 
          gz sim -v4 -r <%= drone_type == 'quad' ? 'iris_world.sdf' : 'zephyr_world.sdf' %>
        - "ros2 run ros_gz_bridge parameter_bridge /clock@rosgraph_msgs/msg/Clock[gz.msgs.Clock"
  <% num_drones.times do |i| %>
  - ardupilot_sitl_<%= i + 1 %>:
      layout: even-horizontal
      panes:
        - >
          /git/ardupilot/Tools/autotest/sim_vehicle.py 
          -v <%= drone_type == 'quad' ? 'ArduCopter' : 'ArduPlane' %> 
          -f <%= drone_type == 'quad' ? 'gazebo-iris' : 'gazebo-zephyr' %> 
          --model JSON
          -I <%= i %>
          --out=udp:42.42.1.99:14540
          --out=udp:42.42.1.<%= i + 1 %>:14550
  <% end %>
  <% end %>

  <% num_drones.times do |i| %>
  - gz_to_gst_<%= i + 1 %>:
      layout: even-horizontal
      panes:
        - python3 /git/resources/yolo/gz_to_gst_bridge.py --gz_topic /camera_<%= i + 1 %> --ip 42.42.1.<%= i + 1 %> --port 5600
  <% end %>

  - qgc:
      layout: even-horizontal
      panes:
        - "gosu qgcuser /squashfs-root/AppRun"

  - housekeeping:
      layout: even-horizontal
      panes:
        - # Interactive pane
        - htop
